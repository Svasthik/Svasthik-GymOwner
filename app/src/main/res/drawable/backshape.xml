<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <solid android:color="#313030" />
            <corners android:radius="30dp"/>
            <gradient
                android:startColor="#313030"
                android:centerColor="#2A2A2A"
                android:endColor="#313030"
                android:angle="90"/>
        </shape>
    </item>
    <item android:top="300dp" android:right="0dp" android:bottom="250dp"
        android:left="0dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <solid android:color="#313030" />
            <corners android:radius="30dp"/>
            <gradient
                android:startColor="#313030"
                android:centerColor="#000000"
                android:endColor="#313030"
                android:angle="90"/>
        </shape>
    </item>
    <item android:top="0dp" android:right="0dp" android:bottom="300dp"
        android:left="0dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <stroke android:width="0dp" android:color="#232323" />
            <solid android:color="#313030" />
            <corners android:radius="30dp"/>

        </shape>
    </item>
</layer-list>